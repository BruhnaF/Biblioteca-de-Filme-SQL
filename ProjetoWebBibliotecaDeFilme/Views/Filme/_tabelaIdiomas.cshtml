@model IEnumerable<ProjetoWebBibliotecaDeFilme.ViewModel.Idiomas.IdiomaViewModel>

@if (Model.ToList().Any())
{
    <div class="row col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Idiomas Adicionados ao Filme</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ToList())
                {
                    <tr>
                        <td class="col-md-11">@item.Descricao</td>
                        <td class="col-md-1">
                            <button class="btn btn-danger" type="button"
                                    title="Remover @item.Descricao"
                                    onclick="RemoverIdioma('@item.IdiomaId')">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
