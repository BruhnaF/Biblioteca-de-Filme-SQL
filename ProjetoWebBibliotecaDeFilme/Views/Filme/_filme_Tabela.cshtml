@model IEnumerable<ProjetoWebBibliotecaDeFilme.ViewModel.Filmes.Filme_Item_TabelaViewModel>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th colspan="5">Opções</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model.ToList())
            {
                <tr>
                    <td>@item.FilmeId</td>
                    <td>
                    @foreach (var nome in item.listaNomeFilme)
                    {
                        <b>@nome.Nome</b> <br />
                    }
                    </td>
                    
                    <td>
                        @Html.ActionLink("Editar", "Editar", "Filme", new { id = item.FilmeId },
                        new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Detalhes", "Filme", new { id = item.FilmeId },
                        new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary btnExcluir" id="@item.FilmeId">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Não possui Filmes Cadastrados.</td>
            </tr>
        }
    </tbody>
</table>